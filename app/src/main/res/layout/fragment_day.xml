<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_notification_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRowBody"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_notification_rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRowHead">

        <TextView
            android:id="@+id/fragment_notification_tv_day_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:text="date"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fragment_notification_tv_day_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:text="name"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/fragment_notification_lv_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_notification_rl_head"
        android:background="@color/colorRowBody" />

    <View
        android:id="@+id/fragment_day_divider"
        style="@style/Divider"
        android:layout_below="@id/fragment_notification_lv_notifications" />
</RelativeLayout>